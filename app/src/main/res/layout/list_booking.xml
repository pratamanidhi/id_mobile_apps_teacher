<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        app:cardCornerRadius="15dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Les :"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu Les :"
                app:layout_constraintTop_toBottomOf="@+id/tv_date"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Guru :"
                app:layout_constraintTop_toBottomOf="@+id/tv_time"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon :"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintStart_toStartOf="@id/tv_name"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat :"
                app:layout_constraintTop_toBottomOf="@id/tv_phone_number"
                app:layout_constraintStart_toStartOf="@id/tv_phone_number"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_matapelajaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matapelajaran :"
                app:layout_constraintTop_toBottomOf="@id/tv_address"
                app:layout_constraintStart_toStartOf="@id/tv_address"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_tingkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tingkat  :"
                app:layout_constraintTop_toBottomOf="@id/tv_matapelajaran"
                app:layout_constraintStart_toStartOf="@id/tv_matapelajaran"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/edt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                app:layout_constraintStart_toEndOf="@+id/tv_date"
                app:layout_constraintTop_toTopOf="@+id/tv_date"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/edt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                app:layout_constraintStart_toEndOf="@+id/tv_time"
                app:layout_constraintTop_toTopOf="@+id/tv_time"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/edt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                app:layout_constraintStart_toEndOf="@id/tv_name"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/edt_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                app:layout_constraintStart_toEndOf="@id/tv_phone_number"
                app:layout_constraintTop_toTopOf="@id/tv_phone_number"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/edt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                app:layout_constraintStart_toEndOf="@id/tv_address"
                app:layout_constraintTop_toTopOf="@id/tv_address"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/edt_matapelajaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                app:layout_constraintStart_toEndOf="@id/tv_matapelajaran"
                app:layout_constraintTop_toTopOf="@id/tv_matapelajaran"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/edt_tingkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                app:layout_constraintStart_toEndOf="@id/tv_tingkat"
                app:layout_constraintTop_toTopOf="@id/tv_tingkat"
                android:layout_marginStart="10dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_detail"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Detail"
                app:layout_constraintTop_toTopOf="@id/tv_tingkat"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/btn_main"
                android:textColor="@color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>